@model communityThrive2.Models.loginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewBag.Title = "UserLogin";
}




<h2> User Login </h2>

@using (Html.BeginForm("Login", "UserLogin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>loginModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <body>
            <form id="currentLogin">
                <div>
                    @Html.Label("emailAddress", "Email Address")
                    @Html.TextBox("emailAddress")
                </div>
                <div>
                    @Html.Label("userPassword", "Password")
                    @Html.TextBox("userPassword")
                </div>
            </form>
            <p>
                <input id="loginButton" type="button" value="Login" />
            </p>
        </body>
